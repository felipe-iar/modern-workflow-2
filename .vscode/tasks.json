    "version": "2.0.0",
    "tasks": [
        {
            "label": "Delete build directory",
            "type": "shell",
            "windows": {
                "command": "bash -c 'rm -frv build-cxarm-win'",
            },
            "linux": {
                "command": "bash -c 'rm -frv build-cxarm-lnx'",
            },
            "group": "build"
        },
        {
            "label": "IAR Cloud login",
            "type": "shell",
            "windows": {
                "command": "bash -c 'iarlogin login --use-device-code'",
            },
            "linux": {
                "command": "bash -c 'iarlogin login --use-device-code'",
            },
            "group": "build"
        },
    ],
}